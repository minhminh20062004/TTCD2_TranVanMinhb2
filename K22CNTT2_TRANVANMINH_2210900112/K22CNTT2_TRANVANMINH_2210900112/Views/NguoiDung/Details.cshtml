        </dt>

        <dd>
            @Html.DisplayFor(model => model.MatKhau)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            <span class="control-label col-md-2">Họ Tên </span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoTen)
